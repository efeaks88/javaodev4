package giris;
import java.util.Scanner;
public class daireninalancevre {
    public static void main(String[] args) {
        double pi=3.14;
        int r;
        int aci;
        double alan;
        //formül (pi*(r*r)*aci)/360
        Scanner sayi = new Scanner(System.in);
        System.out.println("Yariçap giriniz: ");
        r=sayi.nextInt();
        System.out.println("açıyı giriniz: ");
        aci=sayi.nextInt();
        alan = (pi*(r*r)*aci/360);
        System.out.println("Açınız: "+ alan);
    }
}
